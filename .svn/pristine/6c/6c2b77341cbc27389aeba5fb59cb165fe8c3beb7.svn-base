<script type="text/javascript">
$(function($){

    //切换是否显示广告位
    $('.is_show').on('click', function(){
        var _this = $(this);
        var key = _this.attr('data-key');
        var bannerId = _this.attr('data-id');
        MessageBox.confirm('要切换此广告位的显示吗', function(){
            var url = '/index.php?s=/{$Think.MODULE_NAME}/upInfo';
            var data = {id : bannerId, key: key};
            $.post(url, data, function(result){
                if(result.status == 1){
                    _this.html(result.data);
                }
            }, 'json');
        });
    });

    $('.edit_cell_txt').on('click', function(){
        var _this = $(this);
        var key = _this.attr('data-key');
        var id = _this.attr('data-id');
        var beValue = _this.text();
        _this.html('<input type="text" value="' + beValue + '" />');
        var _input = _this.children('input');
        _input.trigger('focus');
        _input.on('blur', function(){
            var afterValue = $(this).val();
            var url = '/index.php?s=/{$Think.MODULE_NAME}/upInfo';
            var data = {id:id, key: key, value:afterValue};
            $.post(url, data, function(result){
                if(result.status == 1){
                    if(afterValue.length > 0){
                        _this.html(afterValue);
                    } else {
                        _this.html(beValue);
                    }
                }
            }, 'json');
        });

    });

    $('.off_type').on('change', function(){
        var _this = $(this);
        var wrapId = _this.attr('data-id');
        $('.offType-wrap').css('display', 'none');
        $('#' + wrapId).css('display', 'block');
    });

    $('#form_save').on('click', function(){
        var _this = $(this);
        _this.attr('disabled', 'disabled');
        $('#add_form').submit();
    })
});



</script>
</body>
