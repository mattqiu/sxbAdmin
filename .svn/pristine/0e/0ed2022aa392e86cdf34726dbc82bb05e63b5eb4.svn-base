        if(empty($_POST) || $site == '1' ){
            $where = "operation_id = 2 OR operation_id = 3 OR operation_id = 9";
        }
        if($site == '2'){
            $where = "(operation_id = 2 OR operation_id = 3 OR operation_id = 9) and (distributor_id = '{$did['distributor_id']}')";
        }
