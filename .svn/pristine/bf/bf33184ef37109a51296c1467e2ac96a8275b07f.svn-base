<table class="list" cellpadding="0" cellspacing="0" >
    <tbody>
        <tr>
            <th width="8%"><input type="checkbox" onclick="selAll(this);" class="1" />编号</th>
            <th>图片地址</th>
            <th>链接地址</th>
            <th>权重</th>
            <th>操作</th>
        </tr>
    <foreach name="list" item="item" key="key">
        <tr>
            <td><input type="checkbox" name="id[]" value="{$item.id}" />{$item.id}</td>
            <td><img src="{$item.img}!normal" alt="" height="80" /></td>
            <td>{$item.url}</td>
            <td>{$item.weight}</td>
            <td>
                &nbsp;<a href="{:U('Slides/edit', 'id='.$item['id'])}">编辑</a>
                &nbsp;<a href="{:U('Slides/del', array('ids' => $item['id'], 'type_str' => $typeStr))}">删除</a>
            </td>       
        </tr>
    </foreach>
    <tr>
        <td class="noneBorder">&nbsp;</td>
        <td colspan="2" class="noneBorder">
        </td>
        <td colspan="7" class="noneBorder" style="text-align: center;">
                {$page}
        </td>
    </tr>
    </tbody>
</table>